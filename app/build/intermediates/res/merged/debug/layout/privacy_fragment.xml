<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyBanner="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/help_bgcolor"
    android:orientation="vertical">

    <au.com.CarDVR.Roadvision.MyBanner
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_banner_height"
        android:layout_marginTop="0dp"
        MyBanner:text="@string/privacypolicy" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/privacy_text"/>
    </ScrollView>
</LinearLayout>
